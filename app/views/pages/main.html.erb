<h1>Sign Requests</h1>
	<table class="table table-striped">
		<tr>
			<th>Requester</th>
			<th>Location</th>
			<th>Item No</th>
			<th>Description</th>
		</tr>
		<% @requests.each do |request| %>
			<tr>
				<td><%= request.requester %></td>
				<td><%= request.location %></td>
				<td><%= request.item_number %></td>
				<td><%= request.description %></td>
			</tr>
		<% end %>
	</table>