<h1>Sign Requests</h1>

<%= bootstrap_form_for @request, :remote => true, :authenticity_token => true do |f| %>
	<%= f.text_field :requester %> 
	<%= f.text_field :location %>
	<%= f.text_field :item_number %>
	<%= f.text_field :description %>
	<%= f.primary "Submit" %>
<% end %>
	
<br />

	<table class="table table-striped">
		<tr>
			<th>Requester</th>
			<th>Location</th>
			<th>Item No</th>
			<th>Description</th>
		</tr>
		<% @requests.each do |request| %>
			<tr>
				<td><%= request.requester %></td>
				<td><%= request.location %></td>
				<td><%= request.item_number %></td>
				<td><%= request.description %></td>
			</tr>
		<% end %>
	</table>